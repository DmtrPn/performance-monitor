{
  "compileOnSave": false,
  "compilerOptions": {
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "lib": ["DOM", "ES2020"],
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "strict": true,
    "declaration": true,
    "noImplicitOverride": true,
    "pretty": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "resolveJsonModule": true,
    "paths": {
    },
    "typeRoots": [
      "../node_modules/@types",
      "node_modules/@types",
      "@types"
    ]
  },
  "exclude": [
    "node_modules",
    "config",
    "dist"
  ]
}